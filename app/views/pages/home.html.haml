.row
  #carousel.carousel.slide.span9
    .carousel-inner
      .active.item
        - if fpost = Post.p_featured.recent.first
          - if fpost.title_picture
            = link_to fpost do
              = image_tag fpost.title_picture.data(:feature)
          - else
            = link_to fpost do
              = image_tag ("filler_feature.jpg")
          .carousel-caption.carousel_caption
            %h4=link_to fpost.title, fpost
            =raw fpost.intro
      .item
        = link_to (image_tag("reviews_promo.jpg", size: "700x319")), '/posts?category=reviews'
        .carousel-caption.carousel_caption
          %h4=link_to "Product Reviews", "/posts?category=reviews"
          %p.carousel_p Read reviews for all different types of athletic and running shoes, running watches, and other running accessories!
      / .item store
      .item
        = link_to (image_tag("newsletter_promo.jpg")), '/why_opt_in'
        .carousel-caption.carousel_caption
          %h4=link_to "Join Our Mailing List", ""
          %ul.carousel_p
            %li Email updates about changes and updates to Keep Running Free
            %li Inspirational running information and quotes
            %li Exclusive information and links to interesting running articles and products
            %li And More...
    = link_to "‹", "#carousel", :class => "carousel-control left", "data-slide" => "prev"
    = link_to "›", "#carousel", :class => "carousel-control right", "data-slide" => "next"

.row
  #about.span4
    .welcome
      %p.welcome_head Welcome to Keep Running Free
    %p.welcome_sub Learn about running, find useful nutritional tips, and read through lists of product reviews that may be of interest.
    %p{style:"font-size: 11px"} Keep Running Free is a website that offers running tips, nutrition tips, reviews, and entertainment all in one place. Delve into a variety of articles and reviews and feel free to comment! We are constantly working to bring fresh content and provide links to information and products that you may find interesting.
    %p{style:"font-size: 11px; font-weight: bold"} Enjoy the articles! Find the most recent and most popular posts on the sidebar tabs.
    .span2
      %p{style:"font-size: 11px"} Like our Facebook page
      %iframe{:allowTransparency => "true", :frameborder => "0", :scrolling => "no", :src => "//www.facebook.com/plugins/like.php?href=http%3A%2F%2Fwww.facebook.com%2Fkeeprunningfree&send=false&layout=button_count&width=50&show_faces=false&action=like&colorscheme=light&font&height=21", :style => "border:none; overflow:hidden; width:45px; height:21px;padding-left: 38px"}
    .span2
      %p{style:"font-size: 11px"} Follow Us on Twitter
      %em{style:"padding-left: 25px"}=render 'layouts/twitter'
  .span4.offset5
    - @authors.each do |author|
      %h4.about_author= author.name
      #author_about
        = author.about

.row
  - @recent_feature[1..7].each do |post|
    %div.post_feature_list.span9
      %br
      %div.post_list_thumb_border.span2
        %div.post_list_thumb
          - if post.title_picture
            = link_to post do
              = image_tag post.title_picture.data(:list)
          - else
            = link_to post do
              = image_tag "filler_list.jpg"
      %div.post_list_text.span6
        %p.post_list_post_title
          =link_to post.title, post
        %p.post_list_post_author
          Written by
          = post.author.name
          | Published on
          = post.published_on.strftime("%B %d, %Y")
        %p.post_intro_one
          =raw post.intro